<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="conexao" transaction-type="RESOURCE_LOCAL">
        <!-- Detecta automaticamente todas as entidades no classpath -->
        
        <class>com.ghamanager.persistencia.Usuario</class>
        <class>com.ghamanager.persistencia.Equipamento</class>
        <class>com.ghamanager.persistencia.Funcionario</class>
        
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
            
        <properties>
            <!-- Conexão com o MySQL -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ghamanager?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="123456"/>
            <!-- Configuração do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- create, create-drop, update, validate -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
